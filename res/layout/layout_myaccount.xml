<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="10dp"
    android:background="@drawable/bg_order_details"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#E35D14"
        android:text="My Account"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"/>
	<View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" />
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" 
	      android:layout_weight="1" android:orientation="vertical"
	      android:layout_marginLeft="40dp"  android:layout_marginRight="60dp">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Name"
            android:textColor="#373737"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:id="@+id/myaccount_name"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Email"
            android:textColor="#373737"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Address"
            android:textColor="#373737"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myaccount_address"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:textColor="#373737"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="City"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myaccount_city"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Phone"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myaccount_phone"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            style="@style/left_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="State CA/Zip"/>
		<TextView
		    style="@style/center_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textSize="25sp"
            android:textColor="#373737"/>
        <TextView
            style="@style/right_text"
            android:textColor="#373737"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myaccount_state"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>