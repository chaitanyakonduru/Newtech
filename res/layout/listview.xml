<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_order_list"
     android:padding="2dip"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dip"
        android:fadeScrollbars="false"
        android:scrollbars="none" >
    </ListView>
    
    <TextView android:id="@android:id/text1" android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone" android:text="No Products"
        android:textSize="18sp"
        android:background="@android:color/white" android:gravity="center"  />"

</LinearLayout>