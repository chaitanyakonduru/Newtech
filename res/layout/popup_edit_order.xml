<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:background="@drawable/calc_bg"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <LinearLayout android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
   <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
     <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Order Id:"/>

      <TextView
            style="@style/right_text"
            android:id="@+id/popup_edit_order_orderId"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
     <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Customer Name:"/>

      <TextView
            style="@style/right_text"
            android:id="@+id/popup_edit_order_custname"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
     <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Price($) : "/>

        <TextView
            style="@style/right_text"
            android:id="@+id/popup_edit_order_price"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
     <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Unit : "/>

        <TextView
            style="@style/right_text"
            android:id="@+id/popup_edit_order_unit"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
     <TextView
            style="@style/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:text="Quantity : "/>
	<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <EditText
            android:layout_width="wrap_content" 
            android:id="@+id/popup_edit_order_qty"  android:paddingLeft="5dp" android:gravity="center" android:maxLength="3"
            android:layout_height="wrap_content" android:textColor="#ffffff" android:inputType="number"
            android:minWidth="100dp" />
      </LinearLayout>
    </LinearLayout>
    
  </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:layout_weight="2"
    	android:orientation="vertical"  android:layout_height="wrap_content">
	  
    <TableLayout  
    android:id="@+id/tableLayout1"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"
    android:layout_weight="1">  
     
    <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"  
        android:layout_width="match_parent">  
        <Button 
            android:textSize="22sp"
            android:id="@+id/one"
            android:background="@drawable/number_btn_bg"
            android:textStyle="bold"  
            android:textColor="@color/black"
            android:typeface="serif"
            android:text="1"/>  
        <Button  
            android:text="2"  
            android:id="@+id/two"
            android:textSize="22sp"
            android:textColor="@color/black"
             android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:textStyle="bold" /> 
        <Button  
            android:text="3"  
            android:id="@+id/three"
            android:textColor="@color/black"
             android:background="@drawable/number_btn_bg"
            android:textSize="22sp"
            android:typeface="serif"
            android:textStyle="bold" />  
    </TableRow>  
    <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"  
        android:layout_width="match_parent">  
        <Button 
            android:textSize="22sp"
            android:id="@+id/four"
            android:textColor="@color/black"
             android:background="@drawable/number_btn_bg"
            android:textStyle="bold"  
            android:typeface="serif"
            android:text="4"/>  
        <Button  
            android:text="5"  
            android:textSize="22sp"
            android:id="@+id/five"
            android:textColor="@color/black"
             android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:textStyle="bold" /> 
        <Button  
            android:text="6"  
            android:textSize="22sp"
            android:id="@+id/six"
            android:textColor="@color/black"
            android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:textStyle="bold" />  
    </TableRow>  
     <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"  
        android:layout_width="match_parent">  
        <Button 
            android:textSize="22sp"
            android:textStyle="bold"  
            android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:id="@+id/seven"
            android:textColor="@color/black"
            android:text="7"/>  
        <Button  
            android:text="8"  
            android:textSize="22sp"
            android:id="@+id/eight"
            android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textStyle="bold" /> 
        <Button  
            android:text="9"  
            android:textSize="22sp"
            android:id="@+id/nine"
            android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textStyle="bold" />  
    </TableRow> 
    
    <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"  
        android:layout_width="match_parent">  
        <Button 
            android:textSize="22sp"
            android:textStyle="bold" 
            android:background="@drawable/clear_btn_bg" 
            android:typeface="serif"
            android:layout_span="2"
            android:textColor="#ffffff"
            android:id="@+id/clear"
            android:text="Clear"/>
        <Button 
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
             android:background="@drawable/number_btn_bg"
            android:typeface="serif"
            android:id="@+id/zero"
            android:text="0"/>
    </TableRow> 
    
</TableLayout>
    </LinearLayout>
</LinearLayout>
