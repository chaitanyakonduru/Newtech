<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_order_details"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:padding="10dp"
        android:text="Order Summary"
        android:textColor="#E35D14"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TableLayout
        android:id="@+id/ordersummery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="4" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >
			 <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:singleLine="true"
                android:text="Id"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:singleLine="true"
                android:text=" Order Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:text="Amount($)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:text=" Customer ID"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:text=" Business Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:text=" Order By"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#9f9f9f" >
            
            <TextView
                android:id="@+id/order_details_orderid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_details_orderdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_details_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_details_custid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_details_businessname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_details_orderby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="Order Items"
        android:textColor="#E35D14"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TableLayout
        android:id="@+id/order_details_mainTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="6"
        android:stretchColumns="5"
        android:visibility="gone" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >
			<TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:text="Id"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:minWidth="200dip"
                android:padding="7dp"
                android:text=" Product name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
